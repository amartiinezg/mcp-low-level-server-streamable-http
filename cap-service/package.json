{
  "name": "cap-catalog-service",
  "version": "1.0.0",
  "description": "CAP OData service for product catalog and order management",
  "main": "server.js",
  "scripts": {
    "start": "cds-serve --port 4004",
    "deploy": "cds deploy --to sqlite:data/db.sqlite",
    "build": "cds build --production",
    "watch": "cds watch --port 4004"
  },
  "dependencies": {
    "@cap-js/sqlite": "^2.0.3",
    "@sap/cds": "^9.4.2",
    "@sap/cds-dk": "^9.3.2",
    "@sap/xssec": "^4.10.0",
    "dotenv": "^17.2.3",
    "express": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "passport": "^0.7.0"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "data/db.sqlite"
        }
      },
      "auth": {
        "kind": "mocked"
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  }
}
